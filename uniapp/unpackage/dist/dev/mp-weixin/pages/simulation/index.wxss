  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 80px;
}
.footer button {
	position: absolute;
		  display: inline-block;
  font-size: 10px;
  
  width: 60px;
  height: 30px;
  bottom: 4px;
  color: #FFFFFF;
}
